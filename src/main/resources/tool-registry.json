{
  "tools": {
    "oracle__list_tables": {
      "capabilities": ["list", "tables", "schema", "metadata", "discovery"],
      "intents": ["list", "show", "discover", "explore", "what"],
      "entities": ["table", "tables", "schema", "database", "structure"],
      "confidence_threshold": 0.7,
      "priority": "normal",
      "description": "List all database tables with metadata",
      "examples": [
        "list all tables",
        "show me the tables",
        "what tables are available"
      ]
    },
    
    "oracle__describe_table": {
      "capabilities": ["describe", "structure", "columns", "metadata", "schema"],
      "intents": ["describe", "show", "structure", "what"],
      "entities": ["table", "column", "field", "structure", "schema"],
      "confidence_threshold": 0.7,
      "priority": "normal",
      "description": "Get detailed table structure and column information",
      "examples": [
        "describe the orders table",
        "show me the structure of customers",
        "what columns are in products"
      ]
    },
    
    "oracle__execute_query": {
      "capabilities": ["query", "select", "retrieve", "filter", "simple_sql"],
      "intents": ["get", "find", "search", "select", "retrieve", "show"],
      "entities": ["data", "records", "rows", "query", "sql"],
      "confidence_threshold": 0.6,
      "priority": "normal",
      "description": "Execute simple SQL SELECT queries directly",
      "use_when": "Query is simple with clear SQL structure",
      "examples": [
        "SELECT * FROM orders",
        "run this SQL query",
        "execute query to get all customers"
      ]
    },
    
    "oracle__explain_plan": {
      "capabilities": ["analyze", "performance", "optimization", "explain"],
      "intents": ["explain", "analyze", "optimize", "performance"],
      "entities": ["plan", "performance", "query", "optimization"],
      "confidence_threshold": 0.8,
      "priority": "low",
      "description": "Get execution plan for query optimization",
      "examples": [
        "explain this query",
        "show execution plan",
        "analyze query performance"
      ]
    },
    
    "oracle_agent": {
      "capabilities": [
        "complex_query",
        "natural_language_sql",
        "multi_table",
        "discovery",
        "intelligent",
        "joins",
        "aggregation",
        "business_logic"
      ],
      "intents": ["*"],
      "entities": ["*"],
      "confidence_threshold": 0.5,
      "priority": "low",
      "description": "Intelligent SQL generation with schema discovery and LLM assistance",
      "use_when": "Query is complex, ambiguous, or requires multiple tables",
      "triggers": [
        "complexity:complex",
        "entities:multiple",
        "capabilities:multi_table",
        "confidence:low"
      ],
      "examples": [
        "how many pending orders from California",
        "show me customers who ordered products last month",
        "find all delayed shipments with customer details",
        "complex business questions"
      ]
    },
    
    "calculator__add": {
      "capabilities": ["calculate", "math", "addition"],
      "intents": ["add", "plus", "sum", "calculate"],
      "entities": ["number", "calculation", "math"],
      "confidence_threshold": 0.8,
      "priority": "normal",
      "description": "Perform addition",
      "enabled": false
    },
    
    "weather__get": {
      "capabilities": ["weather", "temperature", "conditions"],
      "intents": ["weather", "temperature", "forecast"],
      "entities": ["weather", "temperature", "location"],
      "confidence_threshold": 0.8,
      "priority": "normal",
      "description": "Get weather information",
      "enabled": false
    },
    
    "filesystem__read": {
      "capabilities": ["file", "read", "content"],
      "intents": ["read", "open", "show", "get"],
      "entities": ["file", "document", "path"],
      "confidence_threshold": 0.7,
      "priority": "normal",
      "description": "Read file contents",
      "enabled": false
    }
  },
  
  "settings": {
    "llm_validation_enabled": true,
    "default_confidence_threshold": 0.6,
    "cache_similar_queries": true,
    "cache_ttl_seconds": 300,
    "max_cache_size": 100,
    "fallback_to_patterns": true,
    "log_decisions": true
  },
  
  "tool_selection_rules": {
    "prefer_specific_over_general": true,
    "oracle_agent_as_fallback": true,
    "confidence_thresholds": {
      "high": 0.8,
      "medium": 0.6,
      "low": 0.4
    },
    "complexity_indicators": {
      "keywords": ["join", "multiple", "complex", "combine", "aggregate", "group by"],
      "entity_count_threshold": 3,
      "capability_count_threshold": 4
    }
  },
  
  "decision_strategies": {
    "simple_query": {
      "conditions": {
        "complexity": "simple",
        "confidence": ">0.7",
        "entity_count": "<=2"
      },
      "action": "use_specific_tool"
    },
    "complex_query": {
      "conditions": {
        "complexity": "complex",
        "or": [
          {"entity_count": ">2"},
          {"has_capability": "multi_table"},
          {"confidence": "<0.5"}
        ]
      },
      "action": "use_oracle_agent"
    },
    "ambiguous_query": {
      "conditions": {
        "confidence": "<0.4",
        "no_clear_intent": true
      },
      "action": "use_standard_llm"
    }
  }
}
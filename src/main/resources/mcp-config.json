{
  "mcpServers": {
    "httpServers": {
      "calculator": {
        "enabled": true,
        "port": 8081,
        "description": "Mathematical operations server"
      },
      "weather": {
        "enabled": true,
        "port": 8082,
        "description": "Weather information server"
      },
      "database": {
        "enabled": true,
        "port": 8083,
        "description": "Database operations server with sampling support"
      },
      "filesystem": {
        "enabled": true,
        "port": 8084,
        "description": "File system operations with roots/resources"
      }
    },
    "localServers": {
      "example-stdio-server": {
        "enabled": false,
        "command": "node",
        "args": ["path/to/mcp-server.js"],
        "environment": {
          "NODE_ENV": "production"
        },
        "description": "Example local MCP server via stdio"
      },
      "python-mcp-server": {
        "enabled": false,
        "command": "python",
        "args": ["-m", "mcp_server"],
        "environment": {
          "PYTHONPATH": "./lib"
        },
        "description": "Example Python MCP server"
      }
    }
  },
  "clientConfigurations": {
    "dual": {
      "enabled": true,
      "connects": ["calculator", "weather"],
      "description": "Connects to Calculator and Weather servers"
    },
    "single-db": {
      "enabled": true,
      "connects": ["database"],
      "description": "Connects only to Database server"
    },
    "filesystem": {
      "enabled": true,
      "connects": ["filesystem"],
      "description": "Connects to FileSystem server with permissions"
    },
    "local": {
      "enabled": false,
      "type": "stdio",
      "description": "Manages local process-based MCP servers"
    }
  },
  "toolNaming": {
    "usePrefixing": true,
    "prefixSeparator": "__",
    "supportUnprefixed": true
  },
  "transport": {
    "httpTimeout": 30000,
    "sseReconnectDelay": 5000,
    "stdioBufferSize": 8192
  }
}